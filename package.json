{
  "name": "enumjs",
  "private": true,
  "version": "0.0.1",
  "description": "A class for making ENUMs in JavaScript ES5",
  "main": "index.js",
  "jsnext:main": "dest/enum.js",
  "config": {
    "builds": [
      {
        "format": "umd",
        "entry": "src/api.es5.js",
        "dest": "dist/enum.umd.js"
      },
      {
        "format": "es6",
        "entry": "src/api.js",
        "dest": "dist/enum.js"
      },
      {
        "format": "cjs",
        "entry": "test",
        "dest": "build/tests.js"
      }
    ],
    "common": {
      "exports": "auto",
      "moduleName": "$enum",
      "sourceMap": true
    }
  },
  "babel": {
    "presets": [
      "es2015-rollup"
    ]
  },
  "scripts": {
    "clean:dist": "trash 'dist/*'",
    "prebuild": "npm run clean:dist",
    "build:es6": "rollup -c configs/rollup.es6.js",
    "build:umd": "rollup -c configs/rollup.umd.js",
    "build:tests": "rollup -c configs/rollup.tests.js",
    "build": "npm-run-all -p build:es6 build:umd",
    "lint": "eslint .",
    "pretest": "npm run build:tests",
    "test": "node ./build/enum.tests.js | tap-spec",
    "posttest": "echo 'todo'",
    "prepublish": "npm run build && npm test",
    "rollup": "rollup",
    "trash": "trash"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "directories": {
    "doc": "docs",
    "example": "example",
    "lib": "dist",
    "test": "tests"
  },
  "keywords": [],
  "license": "MIT",
  "author": "Ryan Bogle",
  "homepage": "https://github.com/Ashwell/EnumJS",
  "repository": {
    "type": "git",
    "url": "https://github.com/Ashwell/EnumJS.git"
  },
  "bugs": {
    "url": "https://github.com/Ashwell/EnumJS/issues"
  },
  "devDependencies": {
    "babel-eslint": "^5.0.0-beta6",
    "babel-preset-es2015-rollup": "^1.0.0",
    "chalk": "^1.1.1",
    "eslint": "^1.10.3",
    "npm-run-all": "^1.4.0",
    "rollup": "^0.24.0",
    "rollup-plugin-babel": "^2.3.8",
    "rollup-plugin-multi-entry": "^1.0.1",
    "tap-spec": "^4.1.1",
    "tape": "^4.4.0",
    "trash-cli": "^1.2.0"
  }
}
